extends base

block content

		h1 Currency Converter

		form(action="/convert", method="get")
			div(class=currency_form)
				span.label Convert
				input(type="text", name="dollaramount")
				select(name="fromcurrency")
					option(value="USD") Dollars
					option(value="EUR") Euros
					option(value="GBP") Pounds
				span.label to
				select(name="tocurrency")
					option(value="USD") Dollars
					option(value="EUR") Euros
					option(value="GBP") Pounds
			div(class=button)
				input(type="submit", value="Convert", class="btn")